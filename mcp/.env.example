# Transport
MCP_TRANSPORT=sse          # "stdio" or "sse"
MCP_HOST=0.0.0.0
MCP_PORT=8000

# OAuth (required for SSE transport)
OAUTH_ISSUER_URL=https://mcp.example.com
USER_REGISTRY_PATH=data/user_registry.json

# UG Office (only for stdio fallback)
UG_OFFICE_URL=https://www.ugoffice.com
UG_USERNAME=alpha
UG_PASSWORD=your_password_here

# Browser automation
UG_WEB_URL=https://www.ugoffice.com    # SPA URL for Playwright (not the API URL)

# Logging
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR

# OAuth token TTLs (seconds, SSE mode only)
# OAUTH_ACCESS_TOKEN_TTL=3600
# OAUTH_REFRESH_TOKEN_TTL=86400
# OAUTH_AUTH_CODE_TTL=300
